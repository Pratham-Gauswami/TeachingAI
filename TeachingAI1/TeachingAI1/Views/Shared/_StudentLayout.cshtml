<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Student Portal</title>
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">Student Portal</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container">
        <div class="row">
            <aside class="col-md-3">
                <ul class="list-group sidebar-menu">
                    <li class="list-group-item"><a asp-controller="Dashboard" asp-action="Lessons">Lessons</a></li>
                    <li class="list-group-item"><a asp-controller="Dashboard" asp-action="Courses">Courses</a></li>
                    <li class="list-group-item"><a asp-controller="Dashboard" asp-action="ProgressTracking">Progress Tracking</a></li>
                </ul>
            </aside>
            <main class="col-md-9">
                <!-- Render content from the child view -->
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="footer bg-light mt-auto py-3">
        <div class="container">
            <p class="text-center">© 2024 Student Portal</p>
        </div>
    </footer>

    <style>
        .sidebar-menu {
            list-style-type: none;
            padding: 0;
        }

        .sidebar-menu li {
            margin-bottom: 10px;
        }

        .sidebar-menu a {
            text-decoration: none;
            color: #000;
        }

        .sidebar-menu a:hover {
            color: #007bff;
        }

        .dashboard-container {
            margin-top: 20px;
        }
    </style>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
