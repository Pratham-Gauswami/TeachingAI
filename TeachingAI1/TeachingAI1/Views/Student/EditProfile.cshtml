@model StudentProfileViewModel
@{
    ViewData["Title"] = "Edit Profile";
    Layout = "_StudentLayout";
}

<div class="container-fluid py-4">
    <!-- Profile Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h2 mb-0">Edit Profile</h1>
                <a href="@Url.Action("Profile", "Student")" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Profile
                </a>
            </div>
        </div>
    </div>

    <form asp-action="EditProfile" method="post" enctype="multipart/form-data">
        <div class="row">
            <!-- Left Column - Personal Information -->
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body">
                        <h4 class="card-title border-bottom pb-3 mb-4">Personal Information</h4>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="Name" class="form-label">Full Name</label>
                                <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required>
                            </div>
                            <div class="col-md-6">
                                <label for="Email" class="form-label">Email Address</label>
                                <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="Phone" class="form-label">Phone Number</label>
                                <input type="tel" class="form-control" id="Phone" name="Phone" value="@Model.Phone">
                            </div>
                            <div class="col-md-6">
                                <label for="BirthDate" class="form-label">Date of Birth</label>
                                <input type="date" class="form-control" id="BirthDate" name="BirthDate" value="@(Model.BirthDate?.ToString("yyyy-MM-dd"))">
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="Address" class="form-label">Address</label>
                            <input type="text" class="form-control" id="Address" name="Address" value="@Model.Address">
                        </div>
                        
                        <div class="mb-3">
                            <label for="Bio" class="form-label">About Me</label>
                            <textarea class="form-control" id="Bio" name="Bio" rows="4">@Model.Bio</textarea>
                            <div class="form-text">Tell others about yourself and your interests.</div>
                        </div>
                    </div>
                </div>
                
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body">
                        <h4 class="card-title border-bottom pb-3 mb-4">Education & Skills</h4>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="Education" class="form-label">Education</label>
                                <input type="text" class="form-control" id="Education" name="Education" value="@Model.Education">
                                <div class="form-text">E.g., Bachelor of Science in Computer Science</div>
                            </div>
                            <div class="col-md-6">
                                <label for="Institution" class="form-label">Institution</label>
                                <input type="text" class="form-control" id="Institution" name="Institution" value="@Model.Institution">
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="Skills" class="form-label">Skills</label>
                            <textarea class="form-control" id="Skills" name="Skills" rows="3">@Model.Skills</textarea>
                            <div class="form-text">List your skills separated by commas (e.g., Python, TensorFlow, Data Analysis)</div>
                        </div>
                    </div>
                </div>
                
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body">
                        <h4 class="card-title border-bottom pb-3 mb-4">Security Settings</h4>
                        
                        <div class="mb-3">
                            <label for="currentPassword" class="form-label">Current Password</label>
                            <input type="password" class="form-control" id="currentPassword">
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="newPassword" class="form-label">New Password</label>
                                <input type="password" class="form-control" id="newPassword">
                            </div>
                            <div class="col-md-6">
                                <label for="confirmPassword" class="form-label">Confirm New Password</label>
                                <input type="password" class="form-control" id="confirmPassword">
                            </div>
                        </div>
                        
                        <div class="form-text mb-3">Leave password fields empty if you don't want to change your password.</div>
                    </div>
                </div>
            </div>
            
            <!-- Right Column - Profile Picture and Actions -->
            <div class="col-lg-4">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body text-center">
                        <h4 class="card-title border-bottom pb-3 mb-4">Profile Picture</h4>
                        
                        <div class="profile-picture-container mb-3">
                            <img src="@Model.ProfileImage" alt="Profile Picture" class="img-fluid rounded-circle profile-picture" style="width: 150px; height: 150px; object-fit: cover;">
                            <div class="profile-picture-edit">
                                <label for="profileImage" class="btn btn-sm btn-light rounded-circle">
                                    <i class="fas fa-camera"></i>
                                </label>
                                <input type="file" id="profileImage" name="ProfileImageFile" class="d-none" accept="image/*">
                            </div>
                        </div>
                        
                        <p class="text-muted small">Upload a square image for best results.<br>Maximum file size: 5MB.</p>
                        
                        <input type="hidden" name="ProfileImage" value="@Model.ProfileImage">
                    </div>
                </div>
                
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body">
                        <h4 class="card-title border-bottom pb-3 mb-4">Privacy Settings</h4>
                        
                        <div class="form-check form-switch mb-3">
                            <input class="form-check-input" type="checkbox" id="showEmail" checked>
                            <label class="form-check-label" for="showEmail">Show email address to other students</label>
                        </div>
                        
                        <div class="form-check form-switch mb-3">
                            <input class="form-check-input" type="checkbox" id="showProgress" checked>
                            <label class="form-check-label" for="showProgress">Show learning progress in public profile</label>
                        </div>
                        
                        <div class="form-check form-switch mb-3">
                            <input class="form-check-input" type="checkbox" id="showCertificates" checked>
                            <label class="form-check-label" for="showCertificates">Show certificates in public profile</label>
                        </div>
                    </div>
                </div>
                
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a href="@Url.Action("Profile", "Student")" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Styles {
    <style>
        .profile-picture-container {
            margin: 0 auto;
            width: 150px;
            height: 150px;
            position: relative;
        }
        
        .profile-picture {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border: 3px solid #f1f1f1;
        }
        
        .profile-picture-edit {
            position: absolute;
            bottom: 0;
            right: 0;
        }
        
        .profile-picture-edit .btn {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Profile Image Preview
            const profileImageInput = document.getElementById('profileImage');
            const profilePicture = document.querySelector('.profile-picture');
            const profileImageHidden = document.querySelector('input[name="ProfileImage"]');
            
            profileImageInput.addEventListener('change', function(event) {
                if (event.target.files && event.target.files[0]) {
                    const reader = new FileReader();
                    
                    reader.onload = function(e) {
                        profilePicture.src = e.target.result;
                        profileImageHidden.value = e.target.result;
                    };
                    
                    reader.readAsDataURL(event.target.files[0]);
                }
            });
        });
    </script>
} 