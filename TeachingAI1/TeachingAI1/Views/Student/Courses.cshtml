@{
    ViewData["Title"] = "My Courses";
    Layout = "_StudentLayout";
}

<!-- Page Header -->
<div class="page-header mb-4">
    <div class="row align-items-center">
        <div class="col-md-6">
            <h1 class="page-title">My Courses</h1>
            <p class="page-subtitle">Manage and explore your enrolled courses</p>
        </div>
        <div class="col-md-6 text-md-end">
            <button class="btn btn-outline-primary me-2"><i class="fas fa-th-large me-2"></i>Grid</button>
            <button class="btn btn-outline-secondary"><i class="fas fa-list me-2"></i>List</button>
        </div>
    </div>
</div>

<!-- Filters and Search -->
<div class="card mb-4">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="statusFilter" class="form-label">Status</label>
                    <select class="form-select" id="statusFilter">
                        <option value="all" selected>All Courses</option>
                        <option value="in-progress">In Progress</option>
                        <option value="completed">Completed</option>
                        <option value="not-started">Not Started</option>
                    </select>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="categoryFilter" class="form-label">Category</label>
                    <select class="form-select" id="categoryFilter">
                        <option value="all" selected>All Categories</option>
                        <option value="ai">Artificial Intelligence</option>
                        <option value="ml">Machine Learning</option>
                        <option value="data-science">Data Science</option>
                        <option value="programming">Programming</option>
                    </select>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="sortFilter" class="form-label">Sort By</label>
                    <select class="form-select" id="sortFilter">
                        <option value="recent" selected>Recently Accessed</option>
                        <option value="name-asc">Name (A-Z)</option>
                        <option value="name-desc">Name (Z-A)</option>
                        <option value="progress">Progress</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Course Stats -->
<div class="row mb-4">
    <div class="col-md-3 col-sm-6 mb-3 mb-md-0">
        <div class="stat-card bg-primary text-white">
            <div class="stat-card-body">
                <div class="stat-card-icon">
                    <i class="fas fa-book-open"></i>
                </div>
                <div class="stat-card-info">
                    <h5 class="stat-card-title">8</h5>
                    <p class="stat-card-text">Total Courses</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6 mb-3 mb-md-0">
        <div class="stat-card bg-success text-white">
            <div class="stat-card-body">
                <div class="stat-card-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="stat-card-info">
                    <h5 class="stat-card-title">3</h5>
                    <p class="stat-card-text">Completed</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6 mb-3 mb-md-0">
        <div class="stat-card bg-warning text-white">
            <div class="stat-card-body">
                <div class="stat-card-icon">
                    <i class="fas fa-spinner"></i>
                </div>
                <div class="stat-card-info">
                    <h5 class="stat-card-title">4</h5>
                    <p class="stat-card-text">In Progress</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6">
        <div class="stat-card bg-info text-white">
            <div class="stat-card-body">
                <div class="stat-card-icon">
                    <i class="fas fa-clock"></i>
                </div>
                <div class="stat-card-info">
                    <h5 class="stat-card-title">1</h5>
                    <p class="stat-card-text">Not Started</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Courses Grid -->
<div class="row">
    <!-- In Progress Courses -->
    <div class="col-12 mb-4">
        <h2 class="section-title">In Progress</h2>
        <div class="row">
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="course-card">
                    <div class="course-image">
                        <img src="https://images.unsplash.com/photo-1550751827-4bd374c3f58b?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80" alt="AI Fundamentals">
                        <div class="course-badge">75% Complete</div>
                    </div>
                    <div class="course-content">
                        <h3 class="course-title">AI Fundamentals</h3>
                        <p class="course-instructor"><i class="fas fa-user-tie me-2"></i>Dr. John Smith</p>
                        <div class="progress-container">
                            <div class="d-flex justify-content-between mb-1">
                                <span>Progress</span>
                                <span>75%</span>
                            </div>
                            <div class="progress">
                                <div class="progress-bar" role="progressbar" style="width: 75%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between mt-3">
                            <span class="course-meta"><i class="fas fa-book me-1"></i> 12 Lessons</span>
                            <span class="course-meta"><i class="fas fa-clock me-1"></i> 6h left</span>
                        </div>
                        <div class="course-actions mt-3">
                            <a href="#" class="btn btn-primary btn-sm w-100">Continue Learning</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="course-card">
                    <div class="course-image">
                        <img src="https://images.unsplash.com/photo-1555949963-ff9fe0c870eb?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80" alt="Machine Learning Basics">
                        <div class="course-badge">45% Complete</div>
                    </div>
                    <div class="course-content">
                        <h3 class="course-title">Machine Learning Basics</h3>
                        <p class="course-instructor"><i class="fas fa-user-tie me-2"></i>Dr. Emily Rodriguez</p>
                        <div class="progress-container">
                            <div class="d-flex justify-content-between mb-1">
                                <span>Progress</span>
                                <span>45%</span>
                            </div>
                            <div class="progress">
                                <div class="progress-bar" role="progressbar" style="width: 45%;" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between mt-3">
                            <span class="course-meta"><i class="fas fa-book me-1"></i> 16 Lessons</span>
                            <span class="course-meta"><i class="fas fa-clock me-1"></i> 12h left</span>
                        </div>
                        <div class="course-actions mt-3">
                            <a href="#" class="btn btn-primary btn-sm w-100">Continue Learning</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="course-card">
                    <div class="course-image">
                        <img src="https://images.unsplash.com/photo-1516110833967-0b5716ca1387?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80" alt="Data Visualization">
                        <div class="course-badge">60% Complete</div>
                    </div>
                    <div class="course-content">
                        <h3 class="course-title">Data Visualization</h3>
                        <p class="course-instructor"><i class="fas fa-user-tie me-2"></i>Prof. Michael Chen</p>
                        <div class="progress-container">
                            <div class="d-flex justify-content-between mb-1">
                                <span>Progress</span>
                                <span>60%</span>
                            </div>
                            <div class="progress">
                                <div class="progress-bar" role="progressbar" style="width: 60%;" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between mt-3">
                            <span class="course-meta"><i class="fas fa-book me-1"></i> 10 Lessons</span>
                            <span class="course-meta"><i class="fas fa-clock me-1"></i> 5h left</span>
                        </div>
                        <div class="course-actions mt-3">
                            <a href="#" class="btn btn-primary btn-sm w-100">Continue Learning</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Completed Courses -->
    <div class="col-12 mb-4">
        <h2 class="section-title">Completed</h2>
        <div class="row">
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="course-card completed">
                    <div class="course-image">
                        <img src="https://images.unsplash.com/photo-1517694712202-14dd9538aa97?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80" alt="Python Programming">
                        <div class="course-badge completed">Completed</div>
                    </div>
                    <div class="course-content">
                        <h3 class="course-title">Python Programming</h3>
                        <p class="course-instructor"><i class="fas fa-user-tie me-2"></i>Dr. Sarah Johnson</p>
                        <div class="progress-container">
                            <div class="d-flex justify-content-between mb-1">
                                <span>Progress</span>
                                <span>100%</span>
                            </div>
                            <div class="progress">
                                <div class="progress-bar bg-success" role="progressbar" style="width: 100%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between mt-3">
                            <span class="course-meta"><i class="fas fa-book me-1"></i> 20 Lessons</span>
                            <span class="course-meta"><i class="fas fa-award me-1"></i> Certificate</span>
                        </div>
                        <div class="course-actions mt-3">
                            <a href="#" class="btn btn-outline-success btn-sm w-100">View Certificate</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="course-card completed">
                    <div class="course-image">
                        <img src="https://images.unsplash.com/photo-1504868584819-f8e8b4b6d7e3?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80" alt="Web Development">
                        <div class="course-badge completed">Completed</div>
                    </div>
                    <div class="course-content">
                        <h3 class="course-title">Web Development</h3>
                        <p class="course-instructor"><i class="fas fa-user-tie me-2"></i>Prof. David Wilson</p>
                        <div class="progress-container">
                            <div class="d-flex justify-content-between mb-1">
                                <span>Progress</span>
                                <span>100%</span>
                            </div>
                            <div class="progress">
                                <div class="progress-bar bg-success" role="progressbar" style="width: 100%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between mt-3">
                            <span class="course-meta"><i class="fas fa-book me-1"></i> 15 Lessons</span>
                            <span class="course-meta"><i class="fas fa-award me-1"></i> Certificate</span>
                        </div>
                        <div class="course-actions mt-3">
                            <a href="#" class="btn btn-outline-success btn-sm w-100">View Certificate</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Not Started Courses -->
    <div class="col-12">
        <h2 class="section-title">Not Started</h2>
        <div class="row">
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="course-card not-started">
                    <div class="course-image">
                        <img src="https://images.unsplash.com/photo-1526378800651-c32d170fe6f8?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80" alt="Deep Learning">
                        <div class="course-badge not-started">Not Started</div>
                    </div>
                    <div class="course-content">
                        <h3 class="course-title">Deep Learning Specialization</h3>
                        <p class="course-instructor"><i class="fas fa-user-tie me-2"></i>Dr. Michael Chen</p>
                        <div class="progress-container">
                            <div class="d-flex justify-content-between mb-1">
                                <span>Progress</span>
                                <span>0%</span>
                            </div>
                            <div class="progress">
                                <div class="progress-bar" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between mt-3">
                            <span class="course-meta"><i class="fas fa-book me-1"></i> 25 Lessons</span>
                            <span class="course-meta"><i class="fas fa-clock me-1"></i> 30h total</span>
                        </div>
                        <div class="course-actions mt-3">
                            <a href="#" class="btn btn-outline-primary btn-sm w-100">Start Course</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

