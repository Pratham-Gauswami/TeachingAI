@{
    ViewData["Title"] = "Student Dashboard";
    Layout = "_StudentLayout";
}

<!-- Welcome Section -->
<div class="dashboard-welcome mb-4">
    <div class="row align-items-center">
        <div class="col-md-8">
            <h1 class="welcome-title">Welcome back, <span class="text-primary">@User.Identity.Name</span></h1>
            <p class="welcome-subtitle">Track your progress and continue your learning journey</p>
        </div>
        <div class="col-md-4 text-md-end">
            <a href="#" class="btn btn-primary"><i class="fas fa-graduation-cap me-2"></i>Browse Courses</a>
        </div>
    </div>
</div>

<!-- Stats Overview -->
<div class="row mb-4">
    <div class="col-md-3 col-sm-6 mb-4 mb-md-0">
        <div class="dashboard-card">
            <div class="icon" style="background: var(--gradient-1);">
                <i class="fas fa-book-open"></i>
            </div>
            <h3>4</h3>
            <p>Active Courses</p>
            <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: 75%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6 mb-4 mb-md-0">
        <div class="dashboard-card">
            <div class="icon" style="background: var(--gradient-2);">
                <i class="fas fa-tasks"></i>
            </div>
            <h3>8</h3>
            <p>Assignments</p>
            <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: 65%;" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6 mb-4 mb-md-0">
        <div class="dashboard-card">
            <div class="icon" style="background: var(--gradient-3);">
                <i class="fas fa-clock"></i>
            </div>
            <h3>24h</h3>
            <p>Learning Time</p>
            <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: 45%;" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6">
        <div class="dashboard-card">
            <div class="icon" style="background: var(--gradient-4);">
                <i class="fas fa-certificate"></i>
            </div>
            <h3>2</h3>
            <p>Certificates</p>
            <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: 85%;" aria-valuenow="85" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </div>
    </div>
</div>

<!-- Main Dashboard Content -->
<div class="row">
    <!-- Left Column -->
    <div class="col-lg-8">
        <!-- Continue Learning -->
        <div class="dashboard-section mb-4">
            <div class="section-header d-flex justify-content-between align-items-center mb-4">
                <h2 class="section-title">Continue Learning</h2>
                <a href="#" class="btn btn-sm btn-outline-primary">View All Courses</a>
            </div>
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="course-card">
                        <div class="course-image">
                            <img src="https://images.unsplash.com/photo-1550751827-4bd374c3f58b?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80" alt="AI Fundamentals">
                            <div class="course-badge">In Progress</div>
                        </div>
                        <div class="course-content">
                            <h3 class="course-title">AI Fundamentals</h3>
                            <p class="course-instructor"><i class="fas fa-user-tie me-2"></i>Dr. John Smith</p>
                            <div class="progress-container">
                                <div class="d-flex justify-content-between mb-1">
                                    <span>Progress</span>
                                    <span>75%</span>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar" role="progressbar" style="width: 75%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span class="course-meta"><i class="fas fa-book me-1"></i> 12 Lessons</span>
                                <span class="course-meta"><i class="fas fa-clock me-1"></i> 6h left</span>
                            </div>
                            <a href="#" class="btn btn-primary btn-sm w-100 mt-3">Continue Learning</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-4">
                    <div class="course-card">
                        <div class="course-image">
                            <img src="https://images.unsplash.com/photo-1555949963-ff9fe0c870eb?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80" alt="Machine Learning Basics">
                            <div class="course-badge">In Progress</div>
                        </div>
                        <div class="course-content">
                            <h3 class="course-title">Machine Learning Basics</h3>
                            <p class="course-instructor"><i class="fas fa-user-tie me-2"></i>Dr. Emily Rodriguez</p>
                            <div class="progress-container">
                                <div class="d-flex justify-content-between mb-1">
                                    <span>Progress</span>
                                    <span>45%</span>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar" role="progressbar" style="width: 45%;" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span class="course-meta"><i class="fas fa-book me-1"></i> 16 Lessons</span>
                                <span class="course-meta"><i class="fas fa-clock me-1"></i> 12h left</span>
                            </div>
                            <a href="#" class="btn btn-primary btn-sm w-100 mt-3">Continue Learning</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Upcoming Assignments -->
        <div class="dashboard-section mb-4">
            <div class="section-header d-flex justify-content-between align-items-center mb-4">
                <h2 class="section-title">Upcoming Assignments</h2>
                <a href="#" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="assignment-list">
                <div class="assignment-card">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="assignment-title">AI Ethics Case Study</h3>
                        <span class="badge bg-warning">Due Tomorrow</span>
                    </div>
                    <p class="assignment-course"><i class="fas fa-book-open me-2"></i>AI Fundamentals</p>
                    <p class="assignment-due"><i class="far fa-calendar-alt me-2"></i>Due: May 15, 2023</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="assignment-meta">
                            <span><i class="fas fa-file-alt me-1"></i> Essay</span>
                            <span class="ms-3"><i class="fas fa-clock me-1"></i> Est. 2 hours</span>
                        </div>
                        <a href="#" class="btn btn-sm btn-primary">Start Assignment</a>
                    </div>
                </div>
                <div class="assignment-card overdue">
                    <div class="d-flex justify-content-between align-items-center">
