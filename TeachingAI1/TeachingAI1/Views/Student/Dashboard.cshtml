@{
    ViewData["Title"] = "Student Dashboard";
    Layout = "_StudentLayout";
}

<!-- Welcome Section -->
<div class="dashboard-welcome mb-4">
    <div class="row align-items-center">
        <div class="col-md-8">
            <h1 class="welcome-title">Welcome back, <span class="text-primary">@User.Identity.Name</span></h1>
            <p class="welcome-subtitle">Track your progress and continue your learning journey</p>
        </div>
        <div class="col-md-4 text-md-end">
            <a href="@Url.Action("Courses", "Student")" class="btn btn-primary"><i class="fas fa-graduation-cap me-2"></i>Browse Courses</a>
        </div>
    </div>
</div>

<!-- Stats Overview -->
<div class="row mb-4">
    <div class="col-md-3 col-sm-6 mb-4 mb-md-0">
        <a href="@Url.Action("Courses", "Student")" class="text-decoration-none">
            <div class="dashboard-card clickable">
                <div class="icon" style="background: var(--gradient-1);">
                    <i class="fas fa-book-open"></i>
                </div>
                <h3>4</h3>
                <p>Active Courses</p>
                <div class="progress">
                    <div class="progress-bar" role="progressbar" style="width: 75%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-3 col-sm-6 mb-4 mb-md-0">
        <a href="@Url.Action("Assignments", "Student")" class="text-decoration-none">
            <div class="dashboard-card clickable">
                <div class="icon" style="background: var(--gradient-2);">
                    <i class="fas fa-tasks"></i>
                </div>
                <h3>8</h3>
                <p>Assignments</p>
                <div class="progress">
                    <div class="progress-bar" role="progressbar" style="width: 65%;" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-3 col-sm-6 mb-4 mb-md-0">
        <a href="#learningTimeSection" class="text-decoration-none" onclick="scrollToSection('learningTimeSection')">
            <div class="dashboard-card clickable">
                <div class="icon" style="background: var(--gradient-3);">
                    <i class="fas fa-clock"></i>
                </div>
                <h3>24h</h3>
                <p>Learning Time</p>
                <div class="progress">
                    <div class="progress-bar" role="progressbar" style="width: 45%;" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-3 col-sm-6">
        <a href="@Url.Action("Certificates", "Student")" class="text-decoration-none">
            <div class="dashboard-card clickable">
                <div class="icon" style="background: var(--gradient-4);">
                    <i class="fas fa-certificate"></i>
                </div>
                <h3>2</h3>
                <p>Certificates</p>
                <div class="progress">
                    <div class="progress-bar" role="progressbar" style="width: 85%;" aria-valuenow="85" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </a>
    </div>
</div>

<!-- Main Dashboard Content -->
<div class="row">
    <!-- Left Column -->
    <div class="col-lg-8">
        <!-- Continue Learning -->
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Continue Learning</h5>
                <a href="@Url.Action("Courses", "Student", new { filter = "inprogress" })" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body">
                <div class="row">
                    <!-- Course 1 -->
                    <div class="col-md-6">
                        <a href="@Url.Action("CourseDetails", "Student", new { id = 1 })" class="text-decoration-none">
                            <div class="course-card">
                                <div class="course-card-image">
                                    <img src="https://via.placeholder.com/500x300/4361ee/ffffff?text=AI+Fundamentals" alt="AI Fundamentals">
                                    <span class="course-progress-badge">65% Complete</span>
                                </div>
                                <div class="course-card-content">
                                    <h4 class="course-card-title">AI Fundamentals</h4>
                                    <div class="course-progress-bar">
                                        <div class="progress-fill" style="width: 65%;"></div>
                                    </div>
                                    <div class="course-stats">
                                        <span>8/12 lessons completed</span>
                                        <span>5h 30m left</span>
                                    </div>
                                    <button class="continue-btn mt-3">
                                        <i class="fas fa-play-circle me-2"></i>Continue Learning
                                    </button>
                                </div>
                            </div>
                        </a>
                    </div>
                    
                    <!-- Course 2 -->
                    <div class="col-md-6">
                        <a href="@Url.Action("CourseDetails", "Student", new { id = 2 })" class="text-decoration-none">
                            <div class="course-card">
                                <div class="course-card-image">
                                    <img src="https://via.placeholder.com/500x300/7209b7/ffffff?text=Machine+Learning+Basics" alt="Machine Learning Basics">
                                    <span class="course-progress-badge">40% Complete</span>
                                </div>
                                <div class="course-card-content">
                                    <h4 class="course-card-title">Machine Learning Basics</h4>
                                    <div class="course-progress-bar">
                                        <div class="progress-fill" style="width: 40%;"></div>
                                    </div>
                                    <div class="course-stats">
                                        <span>4/10 lessons completed</span>
                                        <span>8h 15m left</span>
                                    </div>
                                    <button class="continue-btn mt-3">
                                        <i class="fas fa-play-circle me-2"></i>Continue Learning
                                    </button>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Upcoming Assignments -->
        <div class="dashboard-section mb-4">
            <div class="section-header d-flex justify-content-between align-items-center mb-4">
                <h2 class="section-title">Upcoming Assignments</h2>
                <a href="#" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="assignment-list">
                <div class="assignment-card">
