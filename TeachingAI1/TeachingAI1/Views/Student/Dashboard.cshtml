                    </div>
                    <p class="assignment-course"><i class="fas fa-book-open me-2"></i>AI Fundamentals</p>
                    <p class="assignment-due"><i class="far fa-calendar-alt me-2"></i>Due: May 15, 2023</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="assignment-meta">
                            <span><i class="fas fa-file-alt me-1"></i> Essay</span>
                            <span class="ms-3"><i class="fas fa-clock me-1"></i> Est. 2 hours</span>
                        </div>
                        <a href="#" class="btn btn-sm btn-primary">Start Assignment</a>
                    </div>
                </div>
                <div class="assignment-card overdue">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="assignment-title">Data Visualization Project</h3>
                        <span class="badge bg-danger">Overdue</span>
                    </div>
                    <p class="assignment-course"><i class="fas fa-book-open me-2"></i>Machine Learning Basics</p>
                    <p class="assignment-due overdue"><i class="far fa-calendar-alt me-2"></i>Due: May 10, 2023</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="assignment-meta">
                            <span><i class="fas fa-project-diagram me-1"></i> Project</span>
                            <span class="ms-3"><i class="fas fa-clock me-1"></i> Est. 4 hours</span>
                        </div>
                        <a href="#" class="btn btn-sm btn-danger">Submit Now</a>
                    </div>
                </div>
                <div class="assignment-card">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="assignment-title">Neural Networks Quiz</h3>
                        <span class="badge bg-info">Due in 3 days</span>
                    </div>
                    <p class="assignment-course"><i class="fas fa-book-open me-2"></i>Machine Learning Basics</p>
                    <p class="assignment-due"><i class="far fa-calendar-alt me-2"></i>Due: May 18, 2023</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="assignment-meta">
                            <span><i class="fas fa-question-circle me-1"></i> Quiz</span>
                            <span class="ms-3"><i class="fas fa-clock me-1"></i> Est. 1 hour</span>
                        </div>
                        <a href="#" class="btn btn-sm btn-outline-primary">Prepare</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Learning Progress -->
        <div class="dashboard-section mb-4">
            <div class="section-header d-flex justify-content-between align-items-center mb-4">
                <h2 class="section-title">Learning Progress</h2>
                <div class="dropdown">
                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="progressDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        Last 30 Days
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="progressDropdown">
                        <li><a class="dropdown-item" href="#">Last 7 Days</a></li>
                        <li><a class="dropdown-item" href="#">Last 30 Days</a></li>
                        <li><a class="dropdown-item" href="#">Last 90 Days</a></li>
                    </ul>
                </div>
            </div>
            <div class="chart-container">
                <canvas id="learningProgressChart"></canvas>
            </div>
        </div>
    </div>

    <!-- Right Column -->
    <div class="col-lg-4">
        <!-- Student Profile Card -->
        <div class="profile-card mb-4">
            <div class="profile-header">
                <div class="profile-avatar">
                    <img src="https://randomuser.me/api/portraits/men/32.jpg" alt="Student Profile" class="rounded-circle">
                </div>
                <div class="profile-info">
                    <h3 class="mb-1">trial2</h3>
                    <p class="text-muted">AI & Machine Learning Student</p>
                </div>
            </div>
            <hr>
            <div class="profile-stats d-flex justify-content-around text-center">
                <div class="stat-item">
                    <h4 class="mb-0 text-primary">4</h4>
                    <p class="text-muted small">Courses</p>
                </div>
                <div class="stat-item">
                    <h4 class="mb-0 text-primary">85%</h4>
                    <p class="text-muted small">Avg. Grade</p>
                </div>
                <div class="stat-item">
                    <h4 class="mb-0 text-primary">24h</h4>
                    <p class="text-muted small">Learning</p>
                </div>
            </div>
            <hr>
            <div class="profile-actions d-flex justify-content-center mt-3">
                <a href="@Url.Action("Profile", "Student")" class="btn btn-primary me-2">
                    <i class="fas fa-user me-1"></i> View Profile
                </a>
                <a href="@Url.Action("EditProfile", "Student")" class="btn btn-outline-secondary">
                    <i class="fas fa-pencil-alt me-1"></i> Edit Profile
                </a>
            </div>

            <!-- Certificate Link -->
            <div class="mt-3 text-center">
                <a href="@Url.Action("Certificates", "Student")" class="text-decoration-none">
                    <i class="fas fa-certificate text-warning me-1"></i> My Certificates
                </a>
            </div>
        </div>

        <!-- Learning Streak -->
        <div class="dashboard-section mb-4">
            <div class="section-header mb-3">
                <h2 class="section-title">Learning Streak</h2>
            </div>
            <div class="streak-container text-center">
                <div class="streak-circle">
                    <div class="streak-number">7</div>
                    <div class="streak-text">days</div>
                </div>
                <p class="streak-message mt-3">You're on a roll! Keep learning daily to maintain your streak.</p>
                <div class="streak-calendar mt-3">
                    <div class="streak-week">
                        <div class="streak-day completed">M</div>
                        <div class="streak-day completed">T</div>
                        <div class="streak-day completed">W</div>
                        <div class="streak-day completed">T</div>
                        <div class="streak-day completed">F</div>
                        <div class="streak-day completed">S</div>
                        <div class="streak-day completed">S</div>
                    </div>
                </div>
                <a href="#" class="btn btn-sm btn-primary mt-3">Today's Goal</a>
            </div>
        </div>

        <!-- Recommended Courses -->
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Recommended For You</h5>
                <a href="@Url.Action("Courses", "Student", new { filter = "recommended" })" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body">
                <div class="row">
                    <!-- Course 1 -->
                    <div class="col-md-4">
                        <a href="@Url.Action("CourseDetails", "Student", new { id = 3 })" class="text-decoration-none">
                            <div class="recommended-course-item">
                                <div class="recommended-course-image">
                                    <img src="https://via.placeholder.com/300x150/4361ee/ffffff?text=Deep+Learning" alt="Deep Learning Specialization">
                                </div>
                                <div class="recommended-course-content">
                                    <h4>Deep Learning Specialization</h4>
                                    <div class="course-instructor">by Andrew Ng</div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="course-rating">
                                            <i class="fas fa-star text-warning"></i>
                                            <i class="fas fa-star text-warning"></i>
                                            <i class="fas fa-star text-warning"></i>
                                            <i class="fas fa-star text-warning"></i>
                                            <i class="fas fa-star-half-alt text-warning"></i>
                                            <span>4.8</span>
                                        </div>
                                        <div class="course-students">
                                            <small>15,000+ students</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                    
                    <!-- Course 2 -->
                    <div class="col-md-4">
                        <a href="@Url.Action("CourseDetails", "Student", new { id = 4 })" class="text-decoration-none">
                            <div class="recommended-course-item">
                                <div class="recommended-course-image">
                                    <img src="https://via.placeholder.com/300x150/3a0ca3/ffffff?text=Data+Science" alt="Data Science Fundamentals">
                                </div>
                                <div class="recommended-course-content">
                                    <h4>Data Science Fundamentals</h4>
                                    <div class="course-instructor">by John Smith</div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="course-rating">
                                            <i class="fas fa-star text-warning"></i>
                                            <i class="fas fa-star text-warning"></i>
                                            <i class="fas fa-star text-warning"></i>
                                            <i class="fas fa-star text-warning"></i>
                                            <i class="far fa-star text-warning"></i>
                                            <span>4.0</span>
                                        </div>
                                        <div class="course-students">
                                            <small>8,500+ students</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                    
                    <!-- Course 3 -->
                    <div class="col-md-4">
                        <a href="@Url.Action("CourseDetails", "Student", new { id = 5 })" class="text-decoration-none">
                            <div class="recommended-course-item">
                                <div class="recommended-course-image">
                                    <img src="https://via.placeholder.com/300x150/4cc9f0/ffffff?text=Python+for+AI" alt="Advanced Python for AI">
                                </div>
                                <div class="recommended-course-content">
                                    <h4>Advanced Python for AI</h4>
                                    <div class="course-instructor">by Sarah Johnson</div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="course-rating">
                                            <i class="fas fa-star text-warning"></i>
                                            <i class="fas fa-star text-warning"></i>
                                            <i class="fas fa-star text-warning"></i>
                                            <i class="fas fa-star text-warning"></i>
                                            <i class="fas fa-star text-warning"></i>
                                            <span>4.9</span>
                                        </div>
                                        <div class="course-students">
                                            <small>12,300+ students</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Upcoming Events -->
        <div class="dashboard-section">
            <div class="section-header mb-3">
                <h2 class="section-title">Upcoming Events</h2>
            </div>
            <div class="calendar-events">
                <div class="calendar-event">
                    <div class="event-date">
                        <span class="event-day">15</span>
                        <span class="event-month">May</span>
                    </div>
                    <div class="event-info">
                        <h4 class="event-title">AI Study Group</h4>
