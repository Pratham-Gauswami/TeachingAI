@section Styles {
    <style>
        .grade-circle {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 120px;
            height: 120px;
            margin: 0 auto;
            border-radius: 50%;
            border: 8px solid;
            font-size: 32px;
            font-weight: bold;
        }
        
        .text-success.grade-circle {
            border-color: #28a745;
        }
        
        .text-primary.grade-circle {
            border-color: #007bff;
        }
        
        .text-warning.grade-circle {
            border-color: #ffc107;
        }
        
        .text-danger.grade-circle {
            border-color: #dc3545;
        }
        
        .statistics-summary .statistic-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
        }
        
        .statistics-summary .statistic-label {
            color: #6c757d;
            font-size: 14px;
            margin-bottom: 5px;
        }
        
        .statistics-summary .statistic-value {
            font-size: 18px;
            font-weight: 600;
        }
    </style>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        $(document).ready(function() {
            // Grade Distribution Chart
            var ctx = document.getElementById('gradeDistributionChart').getContext('2d');
            var gradeDistributionChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['0-59', '60-69', '70-79', '80-89', '90-100'],
                    datasets: [{
                        label: 'Students',
                        data: [2, 5, 12, 18, 8],
                        backgroundColor: [
                            'rgba(220, 53, 69, 0.6)',
                            'rgba(255, 193, 7, 0.6)',
                            'rgba(23, 162, 184, 0.6)',
                            'rgba(0, 123, 255, 0.6)',
                            'rgba(40, 167, 69, 0.6)'
                        ],
                        borderColor: [
                            'rgba(220, 53, 69, 1)',
                            'rgba(255, 193, 7, 1)',
                            'rgba(23, 162, 184, 1)',
                            'rgba(0, 123, 255, 1)',
                            'rgba(40, 167, 69, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            callbacks: {
                                title: function(tooltipItems) {
                                    return 'Grade Range: ' + tooltipItems[0].label;
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                precision: 0
                            }
                        }
                    }
                }
            });
            
            // Highlight your position in the chart
            var yourGradeRange = 4; // 0-based index for 90-100 range
            gradeDistributionChart.data.datasets[0].backgroundColor[yourGradeRange] = 'rgba(40, 167, 69, 1)';
            gradeDistributionChart.update();
        });
    </script>
} 