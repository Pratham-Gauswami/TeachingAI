@{
    ViewData["Title"] = "Teacher Features";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/account.css" />
    <style>
        body {
            background: linear-gradient(to right, #e0eafc, #cfdef3); /* Soft blue gradient for a professional theme */
            font-family: Arial, sans-serif;
        }
        .features-container {
            padding: 50px;
            text-align: center;
        }
        .feature-card {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s, box-shadow 0.3s;
            margin: 20px;
            position: relative;
        }
        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }
        .feature-icon {
            font-size: 60px;
            color: #007bff; /* Blue color for icons */
        }
        h1 {
            color: #333;
            font-size: 2.5rem;
            margin-bottom: 20px;
        }
        p {
            font-size: 1.2rem;
            color: #555;
        }
        .btn-primary {
            background: linear-gradient(45deg, #007bff, #66b2ff);
            border: none;
            transition: background 0.3s;
        }
        .btn-primary:hover {
            background: linear-gradient(45deg, #0056b3, #3399ff);
        }
    </style>
</head>
